{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Activbot Workflow Schema",
  "description": "Schema for validating Activbot workflow definitions",
  "type": "object",
  "required": ["name", "tasks"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the workflow"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the workflow"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the workflow"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of workflow creation"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the workflow",
      "properties": {
        "auto_generated": {
          "type": "boolean"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "description": "List of tasks in the workflow",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Task name"
          },
          "type": {
            "type": "string",
            "description": "Task type (determines which plugin handles it)"
          },
          "description": {
            "type": "string",
            "description": "Task description"
          },
          "parameters": {
            "type": "object",
            "description": "Task-specific parameters"
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of task names this task depends on"
          },
          "retry": {
            "type": "object",
            "properties": {
              "max_attempts": {
                "type": "integer",
                "minimum": 1
              },
              "delay": {
                "type": "integer",
                "minimum": 0
              }
            }
          }
        }
      }
    },
    "update_history": {
      "type": "array",
      "description": "History of workflow updates",
      "items": {
        "type": "object",
        "properties": {
          "version": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "reason": {
            "type": "string"
          }
        }
      }
    }
  }
}
